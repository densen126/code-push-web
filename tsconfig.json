{
    "compilerOptions": {
        "target": "ES2020", // 推荐更高目标版本以支持现代语法
        "module": "CommonJS", // SSR 环境（Node）推荐使用 CommonJS
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "jsx": "react-jsx",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        // ✅ 可选：开启后必须写扩展名 .ts / .tsx
        "allowImportingTsExtensions": true,
        "baseUrl": "./src",
        "paths": {
            "*": [
                "*"
            ]
        }
    },
    "include": [
        "src"
    ] // 只检查 src 下的文件即可
}